<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_button_background_selected_color"
    android:orientation="vertical"
    android:gravity="center_vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_button_height"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_button_height"
        android:background="@drawable/navigation_drawer_background">

        <ImageButton
            android:id="@+id/btnExpBottomSheet"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bottom_sheet_up_icon" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:baselineAligned="false"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bottom_sheet_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_info_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/info_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_info_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_info_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_inventory_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/inventory_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_inventory_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_inventory_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_items"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_items_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/items_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_items_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_items_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_xat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_xat_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/xat_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_xat_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_xat_text" />
                </LinearLayout>
            </LinearLayout>

            <!--
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>
        -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bottom_sheet_notes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_notes_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/notes_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_notes_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_notes_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_need_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_need_list_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/need_list_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_need_list_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_need_list_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_map_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/map_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_map_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="Map" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_sheet_participants"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_sheet_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_margin_button">

                    <ImageView
                        android:id="@+id/bottom_sheet_participants_imageView"
                        android:layout_width="@dimen/icon_dimensions"
                        android:layout_height="@dimen/icon_dimensions"
                        android:background="@drawable/circle_background_icon"
                        app:srcCompat="@drawable/people_icon" />

                    <TextView
                        android:id="@+id/bottom_sheet_participants_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="@string/bottom_sheet_participants_text" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>