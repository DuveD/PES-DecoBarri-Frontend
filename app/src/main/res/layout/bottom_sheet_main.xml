<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="?attr/actionBarSize"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/navigation_drawer_background">

        <ImageButton
            android:id="@+id/btnExpBottomSheet"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bottom_sheet_up_icon" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bottom_sheet_greed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/bottom_sheet_notes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_notes_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/notes_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_notes_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Notes" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_xat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:layout_toRightOf="@id/bottom_sheet_notes"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_xat_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/xat_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_xat_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Xat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_inventory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_notes"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_inventory_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/inventory_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_inventory_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Inventory" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_needList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_xat"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:layout_toRightOf="@id/bottom_sheet_inventory"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_need_list_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/need_list_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_need_list_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Need list" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_items"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_inventory"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_items_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/items_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_Items_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Items" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_map"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom_sheet_needList"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:layout_toRightOf="@id/bottom_sheet_items"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_sheet_map_imageView"
                    android:layout_width="@dimen/icon_dimensions"
                    android:layout_height="@dimen/icon_dimensions"
                    android:background="@drawable/circle_background_icon"
                    app:srcCompat="@drawable/map_icon" />

                <Space
                    android:layout_width="@dimen/text_padding"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/bottom_sheet_map_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:text="Map" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_project_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_bottom_margin"
                android:background="?android:attr/selectableItemBackground"
                android:layout_below="@id/bottom_sheet_items"
                android:clickable="true"
                android:focusable="true"
                android:gravity="bottom|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bottom_project_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/navigationDrawer_selected_item_color"
                    android:gravity="top|bottom|fill_vertical|center"
                    android:text="Project information"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>